<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <TextView
        android:id="@+id/DBText"
        android:layout_width="187.50dp"
        android:layout_height="32dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="112dp"
        android:text="Blutzuckerwert"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:translationZ="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circle_green" />

    <TextView
        android:id="@+id/DBText2"
        android:layout_width="237dp"
        android:layout_height="79dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="112dp"
        android:shadowColor="#00FFFFFF"
        android:shadowRadius="0"
        android:text="Ihre Blutzuckerspiegel ist im optimalen Bereich"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:translationZ="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circle_green" />

    <TextView
        android:id="@+id/DBText3"
        android:layout_width="237dp"
        android:layout_height="79dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="464dp"
        android:layout_marginEnd="112dp"
        android:text="Neue Messung starten"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:translationZ="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circle_green" />

    <Button
        android:id="@+id/neueMessungBtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/circle_white"
        android:text="+"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DBText" />

    <TextView
        android:id="@+id/circle_green"
        android:layout_width="187.50dp"
        android:layout_height="187.50dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="112dp"
        android:background="@drawable/circle_green"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/circle_yellow"
        android:layout_width="187.50dp"
        android:layout_height="187.50dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="112dp"
        android:background="@drawable/circle_yellow"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/circle_red"
        android:layout_width="187.50dp"
        android:layout_height="187.50dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="112dp"
        android:background="@drawable/circle_red"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>